---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div class="w-full lg:w-1/3 px-3 mb-6 lg:mb-0">
    <div class="relative block h-full w-full px-9 py-14 border rounded-4xl">
        <div class="max-w-xs text-center">
            <h5 class="text-3xl xs:text-4xl mb-6">{title}</h5>
        </div>
        <p>
            <slot />
        </p>
    </div>
</div>
