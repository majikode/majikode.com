---
import Layout from "../layouts/Layout.astro";
import Highlight from "../components/Highlight.astro";

import { Image } from "astro:assets";
import RandomImage2 from "../assets/images/random-2.png";
---

<Layout title="Majikode">
    <section class="px-4 md:px-0 py-12 md:py-2">
        <div class="container mx-auto px-4">
            <Image
                class="hidden sm:block absolute top-0 left-2/3 mt-8 lg:mt-20 rounded-4xl opacity-40"
                src={RandomImage2}
                alt=""
                loading="eager"
            />
            <div class="flex flex-wrap -mx-4">
                <div class="w-full px-4 mb-16 lg:mb-0">
                    <div class="max-w-xl mx-auto">
                        <div class="max-w-lg mb-10">
                            <h1 class="font-heading text-6xl sm:text-9xl tracking-tighter mb-8">Let's talk</h1>
                            <p class="text-xl flex flex-col gap-4">
                                <span> We are always on the lookout for new projects and clients.</span><span
                                    >We provide a project timeline and estimated budget <Highlight>before</Highlight>
                                    billing for any work.</span
                                ><span
                                    >We also offer a <Highlight>free consultation session</Highlight>
                                    for any project.</span
                                >
                                <span>
                                    If you are satisfied with the result, we can discuss a longer term working
                                    arrangement.</span
                                ><span
                                    >If you are not satisfied, you are completely free to walk away with zero
                                    obligations.
                                </span>
                            </p>
                            <div class="flex flex-wrap mt-4 -mx-4 mb-20">
                                <div class="w-full sm:w-1/2 px-4 mb-6 sm:mb-0">
                                    <div class="py-6 text-center border border-coolGray-300 rounded-3xl">
                                        <span class="block mb-2 text-sm text-coolGray-500">Call us</span>
                                        <a class="font-medium" href="tel:+48732008331">+48 732 008 331</a>
                                    </div>
                                </div>
                                <div class="w-full sm:w-1/2 px-4">
                                    <div class="py-6 text-center border border-coolGray-300 rounded-3xl">
                                        <span class="block mb-2 text-sm text-coolGray-500">Email us</span>
                                        <a class="font-medium" href="mailto:hello@majikode.com">hello@majikode.com</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
